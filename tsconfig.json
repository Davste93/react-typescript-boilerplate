{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "moduleResolution": "classic"
  },
  "filesGlob": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "typings/main.d.ts",
    "!node_modules/**"
  ],
  "exclude": [
    "node_modules",
    "config",
    "dev_server.js"
  ],
  "files": [
    "app/index.tsx",
    "typings/main.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
