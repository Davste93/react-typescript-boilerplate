{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true
  },
  "filesGlob": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "typings/main.d.ts",
    "!node_modules/**"
  ],
  "exclude": [
    "node_modules",
    "config",
    "dev_server.js"
  ],
  "files": [
    "app/tsmvc-consumer/app.ts",
    "app/tsmvc-consumer/implementation/config/config.ts",
    "app/tsmvc-consumer/implementation/data/AddressDataRepository.ts",
    "app/tsmvc-consumer/implementation/data/AddressDataRepositoryImpl.ts",
    "app/tsmvc-consumer/implementation/data/UserDataRepository.ts",
    "app/tsmvc-consumer/implementation/data/UserDataRepositoryImpl.ts",
    "app/tsmvc-consumer/implementation/model/AddressModel.ts",
    "app/tsmvc-consumer/implementation/model/UserModel.ts",
    "app/tsmvc-consumer/implementation/service/AddressService.ts",
    "app/tsmvc-consumer/implementation/service/UserService.ts",
    "app/index.tsx",
    "typings/main.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
